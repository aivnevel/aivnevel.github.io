/* Reset and Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
    color: #333;
    background-color: #f9f9f9;
}

a {
    color: #000;
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}

/* Accessibility: Focus Styles */
a:focus, button:focus, input:focus, textarea:focus {
    outline: 2px solid #cdb965;
    outline-offset: 2px;
}

/* Layout and Header */
header {
    display: flex;
    flex-direction: column; /* Maak het een kolomstructuur voor mobiel */
    align-items: center; /* Centreer de items */
    background-color: #000000;
    color: #cdb965;
    padding: 1rem;
}

.logo-title-container {
    display: flex;
    flex-direction: column;
    align-items: center; /* Centreer logo en titel */
}

header img {
    height: 60px; /* Kleinere hoogte voor mobiel */
    width: auto;
    margin-bottom: 10px; /* Ruimte onder het logo */
}

header h1 {
    font-size: 1.8rem; /* Verkleind voor mobiel */
    margin-bottom: 0.3rem;
    font-family: "Allura", cursive;
    font-weight: 400;
    color: #cdb965;
    text-align: center; /* Centreer de titel */
}

.tagline {
    font-size: 0.9rem; /* Kleinere tagline voor mobiel */
    color: #cdb965;
    margin-top: -4px; /* Zorgt voor strakkere ruimte met de titel */
    font-family: "Architects Daughter", cursive;
    font-weight: 400;
    text-align: center; /* Centreer de tagline */
}

header nav {
    display: flex;
    gap: 1rem;
    justify-content: center; /* Centreer de navigatie-items */
    margin-top: 1rem; /* Ruimte boven de navigatie */
}

header nav a {
    font-weight: bold;
    color: #cdb965;
}

/* Media Queries for Responsiveness */
@media (max-width: 600px) {
    header {
        flex-direction: column;
        align-items: flex-start;
        text-align: left;
    }

    .logo-title-container {
        flex-direction: column;
        align-items: flex-start;
        margin-bottom: 1rem;
    }

    header img {
        height: 50px; /* Nog kleinere afbeelding op mobiele schermen */
        margin-right: 0;
        margin-bottom: 5px;
    }

    header h1 {
        font-size: 1.6rem; /* Nog kleiner op mobiele schermen */
    }

    .tagline {
        font-size: 0.8rem;
        margin-top: -4px;
    }
    
    header nav {
        justify-content: flex-start;
        gap: 0.5rem;
    }
}
/* Main Content */
section {
    padding: 2rem;
    color: #333;
}

section#home {
    background-color: #f0e4d3;
    text-align: center;
    color: #333;
}

section#home h2 {
    font-size: 1.75rem;
    margin-bottom: 1rem;
    color: #000;
}

section#home img {
    width: 100%;
    max-width: 500px;
    height: auto;
    margin-top: 1rem;
}

button {
    background-color: #333;
    color: #f9f9f9;
    border: none;
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
    cursor: pointer;
    border-radius: 5px;
    margin-top: 1rem;
    transition: background-color 0.3s;
}

button:hover {
    background-color: #666;
}

/* Diensten */
section#diensten {
    background-color: #f0e4d3;
    color: #333;
}

.dienst {
    margin-bottom: 2rem;
    border-bottom: 1px solid #ccc;
    padding-bottom: 1rem;
}

.dienst h3 {
    color: #333;
}

.dienst img {
    max-width: 100%;
    height: auto;
    margin: 0.5rem 0;
}

/* FAQ Section */
section#faq {
    background-color: #f9f9f9;
    color: #333;
}

.faq-item {
    margin-bottom: 1.5rem;
}

.faq-item h3 {
    font-size: 1.2rem;
    cursor: pointer;
    color: #333;
}

.faq-item .answer {
    display: none;
    margin-top: 0.5rem;
    color: #555;
}

/* Contact Form */
section#contact {
    background-color: #f0e4d3;
    padding: 2rem;
    border-radius: 5px;
    color: #333;
}

form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

input, textarea, button {
    font-size: 1rem;
}

label {
    font-weight: bold;
    color: #333;
}

input, textarea {
    padding: 0.5rem;
    border: 1px solid #ccc;
    border-radius: 5px;
    width: 100%;
    max-width: 400px;
}

button {
    max-width: 200px;
    color: #f9f9f9;
    background-color: #333;
}

/* Footer */
footer {
    background-color: #000;
    color: #cdb965;
    text-align: center;
    padding: 1rem;
    font-size: 0.9rem;
}

footer p, footer a {
    margin: 0.5rem 0;
    color: #cdb965;
}

footer nav a {
    color: #cdb965;
    font-weight: normal;
}

footer nav a:hover {
    color: #fff;
}

/* Media Queries for Responsiveness */
@media (min-width: 600px) {
    header, footer {
        text-align: left;
        padding: 1rem 5%;
    }

    section {
        padding: 2rem 5%;
    }

    .dienst {
        display: flex;
        align-items: center;
    }

    .dienst img {
        width: 30%;
        margin-right: 1rem;
    }

    form {
        flex-direction: row;
        flex-wrap: wrap;
        gap: 1.5rem;
    }
}

@media (min-width: 768px) {
    header h1 {
        font-size: 2.5rem;
    }

    button {
        padding: 1rem 2rem;
        font-size: 1.1rem;
    }

    footer {
        font-size: 1rem;
    }
}
